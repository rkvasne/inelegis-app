{
  "name": "inelegis",
  "version": "0.1.0",
  "description": "Sistema de Consulta de Inelegibilidade Eleitoral",
  "main": "index.html",
  "scripts": {
    "build": "node scripts/build.js",
    "lint": "node scripts/lint.js",
    "lint:fix": "node scripts/lint.js --fix",
    "test": "node scripts/test.js",
    "test:unit": "node tests/formatters.test.js && node tests/exceptions.test.js && node tests/search-index.test.js && node tests/fallback.test.js && node tests/extrair-artigos.test.js",
    "test:theme": "node tests/theme-manager.test.js",
    "test:components": "node tests/components.test.js",
    "test:all": "npm run test:unit && npm run test:theme && npm run test:components && npm run test",
    "validate": "node scripts/verify-data.js",
    "backup": "node scripts/backup-data.js create",
    "sync:js": "node scripts/sync-js.js",
    "serve": "npm run sync:js && node scripts/serve.js",
    "dev": "npm run serve",
    "check": "npm run lint && npm run validate && npm run test",
    "optimize": "node scripts/optimize.js",
    "deploy": "node scripts/deploy.js",
    "deploy:prod": "NODE_ENV=production npm run deploy",
    "doc:check": "node scripts/doc-agent.js analyze",
    "doc:audit": "node scripts/doc-agent.js analyze --export",
    "migrate": "node scripts/migrate.js",
    "rollback": "node scripts/rollback.js",
    "generate-token": "node scripts/generate-admin-token.js",
    "start": "npm run serve",
    "prebuild": "npm run check",
    "preoptimize": "npm run build",
    "predeploy": "npm run optimize",
    "clean": "rimraf dist dist-optimized deploy",
    "clean:all": "npm run clean && rimraf node_modules package-lock.json",
    "reinstall": "npm run clean:all && npm install",
    "update-deps": "npm update && npm audit fix",
    "size": "node -e \"const fs=require('fs'); const path=require('path'); const getSize=d=>fs.readdirSync(d).reduce((s,f)=>{const p=path.join(d,f); return s+(fs.statSync(p).isDirectory()?getSize(p):fs.statSync(p).size)},0); console.log('Tamanho do projeto:', Math.round(getSize('.')/1024)+'KB');\"",
    "validate:theme": "node scripts/validate-theme.js",
    "validate:theme:fix": "node scripts/validate-theme.js --fix",
    "validate:theme:strict": "node scripts/validate-theme.js --strict",
    "redis:maintain": "node scripts/redis-maintenance.js"
  },
  "keywords": [
    "inelegibilidade",
    "sistema-juridico"
  ],
  "author": "Inelegis",
  "license": "MIT",
  "dependencies": {
    "ioredis": "^5.8.2"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "eslint": "^9.0.0",
    "html-validate": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": "22.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rkvasne/ineleg-app.git"
  },
  "bugs": {
    "url": "https://github.com/rkvasne/ineleg-app/issues"
  },
  "homepage": "https://github.com/rkvasne/ineleg-app#readme"
}
